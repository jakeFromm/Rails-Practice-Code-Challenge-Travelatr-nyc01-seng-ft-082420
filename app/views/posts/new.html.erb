<h1>New Post</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <ul></ul>
    <li style="color:red";><%= error %></li>
    </ul>
    <% end %>
    <br>
<% end %>

<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name, prompt: true %>
    <br>
    <%= f.collection_select :destination_id, Destination.all, :id, :name, prompt: true %>
    <br>
    <%= f.label :content %>
    <%= f.text_area :content %>
 <%= f.submit %>
<%end%>
